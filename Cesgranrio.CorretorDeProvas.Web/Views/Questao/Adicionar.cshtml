@model Cesgranrio.CorretorDeProvas.Web.Models.QuestaoVM

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    /*evitamos cross site request forgery*/
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">

                    <h4 class="title">Adicionar questão</h4>
                    <p class="category">Preencha os dados da questão abaixo</p>

                </div>
                <div class="content">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    

                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group">
                                @Html.LabelFor(model => model.QuestaoNumero, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.QuestaoNumero, new { htmlAttributes = new { @class = "form-control numero", @placeholder = "ex: 1" } })
                                    @Html.ValidationMessageFor(model => model.QuestaoNumero, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group">
                                @Html.LabelFor(model => model.QuestaoEnunciado, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.QuestaoEnunciado, htmlAttributes: new { @class = "form-control", @placeholder = "ex: Você concorda que os políticos utilizam o sofismo com forma de comunicação? Justifique." })
                                    @Html.ValidationMessageFor(model => model.QuestaoEnunciado, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group">
                                @Html.LabelFor(model => model.QuestaoGradeFidelidadeAoTema, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.QuestaoGradeFidelidadeAoTema, new { htmlAttributes = new { @class = "form-control grade", @placeholder = "ex: 2,5" } })
                                    @Html.ValidationMessageFor(model => model.QuestaoGradeFidelidadeAoTema, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group">
                                @Html.LabelFor(model => model.QuestaoGradeOrganizacaoIdeias, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.QuestaoGradeOrganizacaoIdeias, new { htmlAttributes = new { @class = "form-control grade", @placeholder = "ex: 2,5" } })
                                    @Html.ValidationMessageFor(model => model.QuestaoGradeOrganizacaoIdeias, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group">
                                @Html.LabelFor(model => model.QuestaoGradeNivelDeLinguagem, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.QuestaoGradeNivelDeLinguagem, new { htmlAttributes = new { @class = "form-control grade", @placeholder = "ex: 2,5" } })
                                    @Html.ValidationMessageFor(model => model.QuestaoGradeNivelDeLinguagem, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.QuestaoGradeDominioDasRegras, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.QuestaoGradeDominioDasRegras, new { htmlAttributes = new { @class = "form-control grade", @placeholder = "ex: 2,5" } })
                                    @Html.ValidationMessageFor(model => model.QuestaoGradeDominioDasRegras, "", new { @class = "text-danger"})
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10 salvar">
                                    <input type="submit" value="Salvar" class="btn btn-primary btn-lg mb" />                                    
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
