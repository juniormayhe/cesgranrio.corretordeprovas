@model Cesgranrio.CorretorDeProvas.Web.Models.ErroVM

@{
    ViewBag.Title = "Falha na aplicação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Falha na aplicação</h2>

<div class="row">
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Prezado(a) usuário(a):</span>
        Prezado(a) usuário(a), ocorreu um problema durante o processamento de sua requisição.
    </div>

    <div class="panel panel-danger"> 
        <div class="panel-heading">
            <h3 class="panel-title">Detalhes do erro</h3> 
        </div>
        <div class="panel-body">
            <p><strong>Erro:</strong> @Model.Erro</p>
            <p><strong>Descrição:</strong> @Model.Descrição</p>
            <p>Por favor informe este problema para juniormayhe@gmail.com e retorne à @Html.ActionLink("Página inicial", "Lista", "Questao").</p>
        </div>
    </div>
</div>